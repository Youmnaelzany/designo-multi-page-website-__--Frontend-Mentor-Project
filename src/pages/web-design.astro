---
import Header from "@/components/Header.astro";
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
import Footer from "@/components/Footer.astro";
---

<Layout title="Designo multi-page website">
  <Header />
  <main>
    <!-- First Section / Web Design Details  -->
    <section
      class="section1 w-[69.4375rem] h-[15.75rem] bg-[#E7816B] rounded-[0.9375rem] text-[#fff] flex flex-col items-center justify-center text-center gap-4 relative"
    >
      <img
        src="/images/web-design/desktop/bg-pattern-intro-web.svg"
        alt=""
        class="absolute w-[100%] h-[100%] object-cover z-[-100px] block"
      />
      <h1 class="text-5xl font-medium leading-[3rem] z-50">Web design</h1>
      <p class="text-base font-normal leading-[1.628rem] w-[35%] z-50">
        We build websites that serve as powerful marketing tools and bring
        memorable brand experiences.
      </p>
    </section>
    <!-- End OfFirst Section / Web Design Details  -->
    <!-- Second Section / Web Design Services  -->
    <section class="section2 relative mt-40">
      <!-- The Wrapper Of Web Design Services -->
      <div class="grid grid-cols-3 gap-4 z-50">
        <!-- Express Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img src="/images/web-design/desktop/image-express.jpg" alt="" />
          </div>
          <!-- Project Details -->
          <div
            class="p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-[0.9375rem]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem]"
            >
              Express
            </h2>
            <p class="text-[#333136] text-base font-normal leading-[1.625rem]">
              A multi-carrier shipping website for ecommerce businesses
            </p>
          </div>
        </div>
        <!-- End Of Express Project -->
        <!-- Transfer Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img src="/images/web-design/desktop/image-transfer.jpg" alt="" />
          </div>
          <!-- Project Details -->
          <div
            class="p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-[0.9375rem]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem]"
            >
              Transfer
            </h2>
            <p class="text-[#333136] text-base font-normal leading-[1.625rem]">
              Site for low-cost money transfers and sending money within seconds
            </p>
          </div>
        </div>
        <!-- End Of Transfer Project -->
        <!-- Photon Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img src="/images/web-design/desktop/image-photon.jpg" alt="" />
          </div>
          <!-- Project Details -->
          <div
            class="p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-[0.9375rem]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem]"
            >
              Photon
            </h2>
            <p class="text-[#333136] text-base font-normal leading-[1.625rem]">
              A state-of-the-art music player with high-resolution audio and DSP
              effects1234567
            </p>
          </div>
        </div>
        <!-- End Of Photon Project -->
        <!-- Builder Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img src="/images/web-design/desktop/image-builder.jpg" alt="" />
          </div>
          <!-- Project Details -->
          <div
            class="p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-[0.9375rem]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem]"
            >
              Builder
            </h2>
            <p class="text-[#333136] text-base font-normal leading-[1.625rem]">
              Connects users with local contractors based on their location
            </p>
          </div>
        </div>
        <!-- End Of Builder Project -->
        <!-- Blogr Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img src="/images/web-design/desktop/image-blogr.jpg" alt="" />
          </div>
          <!-- Project Details -->
          <div
            class="p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-[0.9375rem]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem]"
            >
              Blogr
            </h2>
            <p class="text-[#333136] text-base font-normal leading-[1.625rem]">
              Blogr is a platform for creating an online blog or publication
            </p>
          </div>
        </div>
        <!-- End Of Blogr Project -->
        <!-- Camp Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img src="/images/web-design/desktop/image-camp.jpg" alt="" />
          </div>
          <!-- Project Details -->
          <div
            class="p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-[ 0.9375rem]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem]"
            >
              Camp
            </h2>
            <p class="text-[#333136] text-base font-normal leading-[1.625rem]">
              Get expert training in coding, data, design, and digital marketing
            </p>
          </div>
        </div>
        <!-- End Of Camp Project -->
      </div>
    </section>
    <!-- End Of Second Section / Web Design Services  -->
    <!-- Other Servieces Section -->
    <section
      class="section3 mt-40 flex justify-center items-center gap-8 text-[#FDF3F0]"
    >
      <!-- App Design Service -->
      <div
        class="bg-[rgba(0,0,0,0.55)] w-[33.8125rem] h-[19.25rem] relative rounded-[0.9375rem] flex flex-col justify-center items-center gap-6"
      >
        <img
          class="w-full h-full object-cover absolute rounded-[0.9375rem] mix-blend-overlay"
          src="/images/home/desktop/image-app-design.jpg"
          alt=""
        />
        <!-- Text -->
        <div class="flex flex-col justify-center items-center gap-6">
          <h2
            class="text-[2.5rem] font-medium leading-[3rem] tracking-[0.125rem] uppercase"
          >
            App Design
          </h2>
          <!-- Link & Arrow -->
          <div class="flex justify-center items-center gap-4">
            <a
              href="/app-design"
              class="text-[0.9375rem] font-medium tracking-[0.3125rem] uppercase"
            >
              View Projects</a
            >
            <img
              src="/images/shared/desktop/icon-right-arrow.svg"
              alt=""
              class=""
            />
          </div>
        </div>
      </div>
      <div
        class="bg-[rgba(0,0,0,0.55)] w-[33.8125rem] h-[19.25rem] relative rounded-[0.9375rem] flex flex-col justify-center items-center gap-6"
      >
        <img
          class="w-full h-full object-cover absolute rounded-[0.9375rem] mix-blend-overlay"
          src="/images/home/desktop/image-graphic-design.jpg"
          alt=""
        />
        <!-- Text -->
        <div class="flex flex-col justify-center items-center gap-6">
          <h2
            class="text-[2.5rem] font-medium leading-[3rem] tracking-[0.125rem]"
          >
            GRAPHIC DESIGN
          </h2>
          <!-- Link & Arrow -->
          <div class="flex justify-center items-center gap-4">
            <a
              href="/graphic-design"
              class="text-[0.9375rem] font-medium tracking-[0.3125rem] uppercase"
            >
              Graphic Design</a
            >
            <img
              src="/images/shared/desktop/icon-right-arrow.svg"
              alt=""
              class=""
            />
          </div>
        </div>
      </div>
    </section>
    <!-- End Of Other Servieces Section -->
    <!-- About Your Project Section -->
    <section
      class="section4 mt-40 bg-[#E7816B] text-[#fff] w-[69.4375rem] h-[18.25rem] rounded-[0.9375rem] relative -bottom-16"
    >
      <img
        src="/public/images/shared/desktop/bg-pattern-call-to-action.svg"
        alt=""
        class="absolute w-[100%] h-[100%] object-cover z-[-100px] block"
      />

      <div
        class="flex justify-between items-center relative py-[3.125rem] px-24"
      >
        <!-- Text -->
        <div class="flex flex-col gap-4">
          <h2 class="w-[16.75rem] text-[2.5rem] font-medium leading-10">
            Let&acute;s talk about your project
          </h2>
          <p class="w-[28.6875rem] text-base font-normal leading-[1.625rem]">
            Ready to take it to the next level? Contact us today and find out
            how our expertise can help your business grow.
          </p>
        </div>
        <!-- Input -->
        <div
          class="w-[9.5rem] h-[3.5rem] bg-[#fff] rounded-lg flex justify-center"
        >
          <button
            class="uppercase text-[#333136] text-[0.9375rem] font-medium tracking-[0.0625rem]"
            type="button">Get in touch</button
          >
        </div>
      </div>
    </section>
    <!-- End Of About Your Project Section -->
  </main>
  <Footer />
</Layout>
