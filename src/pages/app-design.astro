---
import Header from "@/components/Header.astro";
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
import Footer from "@/components/Footer.astro";
---

<Layout title="Designo multi-page website">
  <Header />
  <main>
    <!-- First Section / App Design Details  -->
    <section
      class="section1 z-[1000px] w-[69.4375rem] h-[15.75rem] bg-[#E7816B] rounded-[0.9375rem] text-[#fff] flex flex-col items-center justify-center text-center gap-4 relative"
    >
      <img
        src="/images/web-design/desktop/bg-pattern-intro-web.svg"
        alt=""
        class="absolute w-[100%] h-[100%] object-cover z-[-100px] block"
      />
      <h1 class="text-5xl font-medium leading-[3rem] z-50">App design</h1>
      <p class="text-base font-normal leading-[1.628rem] w-[35%] z-50">
        Our mobile designs bring intuitive digital solutions to your customers
        right at their fingertips.
      </p>
    </section>
    <!-- End OfFirst Section / App Design Details  -->
    <!-- Second Section / Web Design Services  -->
    <section class="section2 relative mt-40 z-[50rem]">
      <!-- Background Pattern -->
      <div class="absolute object-cover z-[-1000px] left-[-250px] top-[-250px]">
        <img src="/images/shared/desktop/bg-pattern-leaf.svg" alt="" />
      </div>
      <!-- The Wrapper Of Web Design Services -->
      <div class="grid grid-cols-3 gap-4 z-50">
        <!-- AIRFILTER Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img
              src="/public/images/app-design/desktop/image-airfilter.jpg"
              alt=""
            />
          </div>
          <!-- Project Details -->
          <div
            class="cursor-pointer p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-b-[0.9375rem] hover:bg-[#E7816B] transition-all ease-in-out duration-[0.5s]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem] hover:text-[#fff]"
            >
              AIRFILTER
            </h2>
            <p
              class="text-[#333136] text-base font-normal leading-[1.625rem] hover:text-[#fff]"
            >
              Solving the problem of poor indoor air quality by filtering the
              air
            </p>
          </div>
        </div>
        <!-- End Of AIRFILTER Project -->
        <!-- EYECAM Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img
              src="/public/images/app-design/desktop/image-eyecam.jpg"
              alt=""
            />
          </div>
          <!-- Project Details -->
          <div
            class="cursor-pointer p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-b-[0.9375rem] hover:bg-[#E7816B] transition-all ease-in-out duration-[0.5s]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem] hover:text-[#fff]"
            >
              EYECAM
            </h2>
            <p
              class="text-[#333136] text-base font-normal leading-[1.625rem] hover:text-[#fff]"
            >
              Product that lets you edit your favorite photos and videos at any
              time
            </p>
          </div>
        </div>
        <!-- End Of EYECAM Project -->
        <!-- FACEIT Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img
              src="/public/images/app-design/desktop/image-faceit.jpg"
              alt=""
            />
          </div>
          <!-- Project Details -->
          <div
            class="cursor-pointer p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-b-[0.9375rem] hover:bg-[#E7816B] transition-all ease-in-out duration-[0.5s]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem] hover:text-[#fff]"
            >
              FACEIT
            </h2>
            <p
              class="text-[#333136] text-base font-normal leading-[1.625rem] hover:text-[#fff]"
            >
              Get to meet your favorite internet superstar with the faceit app
            </p>
          </div>
        </div>
        <!-- End Of FACEIT Project -->
        <!-- TODOO Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img
              src="/public/images/app-design/desktop/image-todo.jpg"
              alt=""
            />
          </div>
          <!-- Project Details -->
          <div
            class="cursor-pointer p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-b-[0.9375rem] hover:bg-[#E7816B] transition-all ease-in-out duration-[0.5s]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem] hover:text-[#fff]"
            >
              TODO
            </h2>
            <p
              class="text-[#333136] text-base font-normal leading-[1.625rem] hover:text-[#fff]"
            >
              A todo app that features cloud sync with light and dark mode
            </p>
          </div>
        </div>
        <!-- End Of TODO Project -->
        <!-- LOOPSTUDIOS Project -->
        <div class="w-[ 21.875rem]">
          <!-- Project Image -->
          <div class="">
            <img
              src="/public/images/app-design/desktop/image-loopstudios.jpg"
              alt=""
            />
          </div>
          <!-- Project Details -->
          <div
            class="cursor-pointer p-8 bg-[#FDF3F0] flex flex-col items-center justify-center gap-4 text-center rounded-b-[0.9375rem] hover:bg-[#E7816B] transition-all ease-in-out duration-[0.5s]"
          >
            <h2
              class="text-[#E7816B] font-medium text-lg leading-[1.625rem] tracking-[0.3125rem] hover:text-[#fff]"
            >
              LOOPSTUDIOS
            </h2>
            <p
              class="text-[#333136] text-base font-normal leading-[1.625rem] hover:text-[#fff]"
            >
              A VR experience app made for Loopstudios
            </p>
          </div>
        </div>
        <!-- End Of LOOPSTUDIOS Project -->
      </div>
    </section>
    <!-- End Of Second Section / Web Design Services  -->

    <!-- Other Servieces Section -->
    <section
      class="section3 mt-40 flex justify-center items-center gap-8 text-[#FDF3F0]"
    >
      <!-- App Design Service -->
      <div
        class="bg-[rgba(0,0,0,0.55)] w-[33.8125rem] h-[19.25rem] relative rounded-[0.9375rem] flex flex-col justify-center items-center gap-6"
      >
        <img
          class="w-full h-full object-cover absolute rounded-[0.9375rem] mix-blend-overlay"
          src="/images/home/desktop/image-web-design-small.jpg"
          alt=""
        />
        <!-- Text -->
        <div class="flex flex-col justify-center items-center gap-6">
          <h2
            class="text-[2.5rem] font-medium leading-[3rem] tracking-[0.125rem] uppercase"
          >
            Web Design
          </h2>
          <!-- Link & Arrow -->
          <div class="flex justify-center items-center gap-4">
            <a
              href="/app-design"
              class="text-[0.9375rem] font-medium tracking-[0.3125rem] uppercase"
            >
              View Projects</a
            >
            <img
              src="/images/shared/desktop/icon-right-arrow.svg"
              alt=""
              class=""
            />
          </div>
        </div>
      </div>
      <!-- End Of App Design Service -->
      <!-- Graphic Design Service -->
      <div
        class="bg-[rgba(0,0,0,0.55)] w-[33.8125rem] h-[19.25rem] relative rounded-[0.9375rem] flex flex-col justify-center items-center gap-6"
      >
        <img
          class="w-full h-full object-cover absolute rounded-[0.9375rem] mix-blend-overlay"
          src="/images/home/desktop/image-graphic-design.jpg"
          alt=""
        />
        <!-- Text -->
        <div class="flex flex-col justify-center items-center gap-6">
          <h2
            class="text-[2.5rem] font-medium leading-[3rem] tracking-[0.125rem]"
          >
            GRAPHIC DESIGN
          </h2>
          <!-- Link & Arrow -->
          <div class="flex justify-center items-center gap-4">
            <a
              href="/graphic-design"
              class="text-[0.9375rem] font-medium tracking-[0.3125rem] uppercase"
            >
              Graphic Design</a
            >
            <img
              src="/images/shared/desktop/icon-right-arrow.svg"
              alt=""
              class=""
            />
          </div>
        </div>
      </div>
    </section>
    <!-- End Of Other Servieces Section -->

    <!-- About Your Project Section -->
    <section
      class="section4 mt-40 bg-[#E7816B] text-[#fff] w-[69.4375rem] h-[18.25rem] rounded-[0.9375rem] relative -bottom-16"
    >
      <img
        src="/images/shared/desktop/bg-pattern-call-to-action.svg"
        alt=""
        class="absolute w-[100%] h-[100%] object-cover z-[-100px] block"
      />

      <div
        class="flex justify-between items-center relative py-[3.125rem] px-24"
      >
        <!-- Text -->
        <div class="flex flex-col gap-4">
          <h2 class="w-[16.75rem] text-[2.5rem] font-medium leading-10">
            Let&acute;s talk about your project
          </h2>
          <p class="w-[28.6875rem] text-base font-normal leading-[1.625rem]">
            Ready to take it to the next level? Contact us today and find out
            how our expertise can help your business grow.
          </p>
        </div>
        <!-- Input -->
        <div
          class="w-[9.5rem] h-[3.5rem] bg-[#fff] rounded-lg flex justify-center hover:bg-[#FFAD9B] transition-all ease-in-out duration-[0.5s]"
        >
          <button
            class="uppercase cursor-pointer text-[#333136] hover:text-[#fff] text-[0.9375rem] font-medium tracking-[0.0625rem] transition-all ease-in-out duration-[0.5s]"
            type="button">Get in touch</button
          >
        </div>
      </div>
    </section>
    <!-- End Of About Your Project Section -->
  </main>
  <Footer />
</Layout>
